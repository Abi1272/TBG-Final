#include<iostream>
#include<string>
using namespace std;

string inventory[4];

int main() {

	int room = 1;
	string userInput = "potato"; //dummy value

	while (userInput != "quit") { //game loop

		switch (room) {
		case 1:
			cout << "you are in room 1, you can go south" << endl;
			getline(cin, userInput);
			if (userInput == "south" || userInput == "South" || userInput.compare("go south") == 0)
				room = 2;
			break;

		case 2:
			cout << "you are in room 2, you can go west or south" << endl;
			cin >> userInput;
			if (userInput == "west" || userInput == "West" || userInput.compare("go west") == 0)
				room = 3;
			else if (userInput == "south" || userInput == "South" || userInput.compare("go south") == 0)
				room = 4;
			else
				cout << "sorry not an option" << endl;
			break;

		case 3:
			cout << "you are on island 1, you can go east, type e to grab" << endl;
			cin >> userInput;
			if (userInput == "east" || userInput == "East" || userInput.compare("go east") == 0)
				room = 2;
			else if (userInput == "e" || userInput == "E")
				inventory[0] = "key";
			cout << "You grabbed a key!" << endl;
			break;

		case 4:
			cout << "you are on island 1, you can go east, type e to grab" << endl;
			cin >> userInput;
			if (userInput == "east" || userInput == "East" || userInput.compare("go east") == 0)
				room = 2;
			else if (userInput == "e" || userInput == "E")
				inventory[0] = "key";
			cout << "You grabbed a key!" << endl;
			break;

		case 5:
			cout << "you are in room 4, you can go east" << endl;
			cin >> userInput;
			if (userInput == "east" || userInput == "East" || userInput.compare("go east") == 0)
				room = 5;
			break;

		case 6:
			cout << "you are in room 5, you can go south" << endl;
			cin >> userInput;
			if (userInput == "south" || userInput == "South" || userInput.compare("go south") == 0)
				room = 6;
			break;

		case 7:
			cout << "you are in room 6, you can go south" << endl;
			cin >> userInput;
			if (userInput == "south" || userInput == "South" || userInput.compare("go south") == 0)
				room = 7;
			break;

		case 8:
			cout << "you are in room 7, you can go east" << endl;
			cin >> userInput;
			if (userInput == "east" || userInput == "East" || userInput.compare("go east") == 0)
				room = 8;
			break;

		case 9:
			cout << "you are in room 8, you can go east" << endl;
			cin >> userInput;
			if (userInput == "east" || userInput == "West" || userInput.compare("go west") == 0)
				room = 9;
			break;

		case 10:
			cout << "you are in room 9, you can go north" << endl;
			cin >> userInput;
			if (userInput == "north" || userInput == "North" || userInput.compare("go north") == 0)
				room = 10;
			break;

		case 11:
			cout << "you are in room 10, you can go south" << endl;
			cin >> userInput;
			if (userInput == "south" || userInput == "South" || userInput.compare("go south") == 0)
				room = 9;
			break;
		}





	}//end game loop
}//end game loop
